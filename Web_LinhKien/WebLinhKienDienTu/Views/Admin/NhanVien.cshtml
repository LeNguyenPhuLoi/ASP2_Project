@using Microsoft.AspNetCore.Identity
@using WebLinhKienDienTu.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml"; // Chỉ định layout mới cho trang Index
    ViewData["Title"] = "Admin Page";
}
@model List<Nhanvien>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Adminpage - Nhân Viên</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        .pagination {
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center;
        }
    </style>

</head>

<body>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <div class="container mt-4">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Quản lý Nhân Viên</h4>
                    @* <a class="btn btn-success btn-sm">+ Thêm Nhân Viên</a> *@
                    <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addNhanVienModal"><i class="bi bi-pencil"></i><span> Thêm Nhân Viên</span></a>
                </div>

                <div class="card-body">
                    <!-- Thanh tìm kiếm -->
                    <form class="row mb-3" method="post" asp-action="NhanVien" asp-controller="Admin">
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="searchMa" placeholder="Tìm theo mã nhân viên" value="@ViewBag.searchMa">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="searchTen" placeholder="Tìm theo tên nhân viên" value="@ViewBag.searchTen">
                        </div>
                        <div class="col-md-4 text-end">
                            <button class="btn btn-info" type="submit">Tìm kiếm</button>
                            <a class="btn btn-secondary" href="@Url.Action("NhanVien", "Admin")">Làm mới</a>
                        </div>
                    </form>

                    <!-- Bảng danh sách -->
                    <table class="table table-striped table-hover text-center align-middle">
                        <thead>
                            <tr>
                                <th>
                                    <span class="custom-checkbox">
                                        <input type="checkbox" id="selectAll">
                                        <label for="selectAll"></label>
                                    </span>
                                </th>
                                <th>Mã</th>
                                <th>Tên Nhân viên</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                                <th>Chức</th>
                                <th>Lương</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th width="10%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var nhanvien in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="custom-checkbox">
                                            <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                            <label for="checkbox1"></label>
                                        </span>
                                    </td>
                                    <td>@nhanvien.Manv</td>
                                    <td>@nhanvien.Tennv</td>
                                    <td>@nhanvien.Gioitinh</td>
                                    <td>@nhanvien.Ngaysinh</td>
                                    <td>@nhanvien.Chuc</td>
                                    <td>@nhanvien.Luong</td>
                                    <td>@nhanvien.Diachi</td>
                                    <td>@nhanvien.Sdt</td>
                                    <td>@nhanvien.Email</td>
                                    <td>
                                        <a class="btn btn-warning btn-sm"
                                           data-bs-toggle="modal"
                                           data-bs-target="#editNhanVienModal"
                                           data-manv="@nhanvien.Manv"
                                           data-tennv="@nhanvien.Tennv"
                                           data-gioitinh="@nhanvien.Gioitinh"
                                           data-ngaysinh="@nhanvien.Ngaysinh.ToString("yyyy-MM-dd")"
                                           data-chuc="@nhanvien.Chuc"
                                           data-luong="@nhanvien.Luong"
                                           data-diachi="@nhanvien.Diachi"
                                           data-sdt="@nhanvien.Sdt"
                                           data-email="@nhanvien.Email">Sửa</a>

                                        <a class="btn btn-danger btn-sm"
                                           data-bs-toggle="modal"
                                           data-bs-target="#deleteNhanVien"
                                           data-manv="@nhanvien.Manv">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <nav>
                        <ul class="pagination justify-content-center">

                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("NhanVien", new { page = ViewBag.Page - 1 })">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPage; i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("NhanVien", new { page = i })">@i</a>
                                </li>
                            }

                            @if (ViewBag.Page < ViewBag.TotalPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("NhanVien", new { page = ViewBag.Page + 1 })">Next</a>
                                </li>
                            }

                        </ul>
                    </nav>


                    <!-- MODAL THÊM NHÂN VIÊN -->
                    <div class="modal fade" id="addNhanVienModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("AddNhanVien", "Admin", FormMethod.Post))
                                {
                                    <div class="modal-header">
                                        <h4>Thêm Nhân Viên</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        <div class="mb-2">
                                            @Html.Label("Tên nhân viên")
                                            @Html.TextBox("tennv", "", new { @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Giới tính")
                                            @Html.DropDownList("gioitinh", new SelectList(new[] { "Nam", "Nữ" }), "Chọn giới tính", new { @class = "form-control" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Ngày sinh")
                                            @Html.TextBox("ngaysinh", "", new { @type = "date", @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Chức vụ")
                                            @Html.TextBox("chuc", "", new { @class = "form-control" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Lương")
                                            @Html.TextBox("luong", "", new { @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Số điện thoại")
                                            @Html.TextBox("sdt", "", new { @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Địa chỉ")
                                            @Html.TextArea("diachi", "", new { @class = "form-control" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Email")
                                            @Html.TextBox("email", "", new { @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Mật khẩu")
                                            @Html.Password("pass", "", new { @class = "form-control", required = "required" })
                                        </div>

                                        <div class="mb-2">
                                            @Html.Label("Xác nhận mật khẩu")
                                            @Html.Password("confirmpass", "", new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button class="btn btn-success">Thêm</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Edit Modal HTML -->
                    <div id="editNhanVienModal" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                @using (Html.BeginForm("EditNhanVien", "Admin", FormMethod.Post))
                                {
                                    <div class="modal-header">
                                        <h4 class="modal-title">Sửa Nhân Viên</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">

                                        <!-- Mã nhân viên (readonly) -->
                                        <div class="mb-3">
                                            @Html.Label("Mã nhân viên")
                                            @Html.TextBox("manv", "", new { @class = "form-control", id = "edit-manv", @readonly = "readonly", required = "required" })
                                        </div>

                                        <!-- Tên nhân viên -->
                                        <div class="mb-3">
                                            @Html.Label("Tên Nhân Viên")
                                            @Html.TextBox("tennv", "", new { @class = "form-control", id = "edit-tennv", required = "required" })
                                        </div>

                                        <!-- Giới tính -->
                                        <div class="mb-3">
                                            @Html.Label("Giới tính")
                                            @Html.DropDownList("gioitinh",
                                            new SelectList(new[] { "Nam", "Nữ" }),
                                                                        "-- Chọn giới tính --",
                                                                        new { @class = "form-control", id = "edit-gioitinh", required = "required" })
                                </div>

                                <!-- Ngày sinh -->
                                <div class="mb-3">
                                    @Html.Label("Ngày sinh")
                                    @Html.TextBox("ngaysinh", "", new { @type = "date", @class = "form-control", id = "edit-ngaysinh", required = "required" })
                                </div>

                                <!-- Chức vụ -->
                                <div class="mb-3">
                                    @Html.Label("Chức vụ")
                                    @Html.TextBox("chuc", "", new { @class = "form-control", id = "edit-chuc", required = "required" })
                                </div>

                                <!-- Lương -->
                                <div class="mb-3">
                                    @Html.Label("Lương")
                                    @Html.TextBox("luong", "", new { @class = "form-control", id = "edit-luong", required = "required" })
                                </div>

                                <!-- Số điện thoại -->
                                <div class="mb-3">
                                    @Html.Label("Số điện thoại")
                                    @Html.TextBox("sdt", "", new { @class = "form-control", id = "edit-sdt", required = "required" })
                                </div>

                                <!-- Địa chỉ -->
                                <div class="mb-3">
                                    @Html.Label("Địa chỉ")
                                    @Html.TextArea("diachi", "", new { @class = "form-control", id = "edit-diachi", required = "required" })
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                <button type="submit" class="btn btn-info">Cập nhật</button>
                            </div>
                                                        }

                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal HTML -->
                    <div id="deleteNhanVien" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("DeleteNhanVien", "Admin", FormMethod.Post))
                                {
                                    <div class="modal-header">
                                        <h4 class="modal-title">Xóa Nhân Viên</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        @Html.TextBox("manv", "", new { @class = "form-control", id = "modal-delete-manv", required = "required", @readonly = "readonly" })
                                        <p>Bạn có muốn xóa Nhân viên này?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <script>

                var addForm = document.querySelector('#addNhanVienModal form');
                var form = document.querySelector('form');
                form.addEventListener('submit', function(e){ var pass = form.querySelector('[name="pass"]').value;
                var conf = form.querySelector('[name="confirmpass"]').value; if(pass !== conf){ e.preventDefault();
                    alert("Mật khẩu xác nhận không khớp!"); } });

                    // ===================== MODAL SỬA NHÂN VIÊN =====================
            var editModal = document.getElementById('editNhanVienModal');

            if (editModal) {
                editModal.addEventListener('show.bs.modal', function (event) {

                    var button = event.relatedTarget;

                    document.getElementById('edit-manv').value = button.getAttribute('data-manv');
                    document.getElementById('edit-tennv').value = button.getAttribute('data-tennv');
                    document.getElementById('edit-gioitinh').value = button.getAttribute('data-gioitinh');
                    document.getElementById('edit-ngaysinh').value = button.getAttribute('data-ngaysinh');
                    document.getElementById('edit-chuc').value = button.getAttribute('data-chuc');
                    document.getElementById('edit-luong').value = button.getAttribute('data-luong');
                    document.getElementById('edit-sdt').value = button.getAttribute('data-sdt');
                    document.getElementById('edit-diachi').value = button.getAttribute('data-diachi');

                });
            }

            var deleteModal = document.getElementById('deleteNhanVien');
                deleteModal.addEventListener('show.bs.modal', function (event) {
                        var button = event.relatedTarget;
                        document.getElementById('modal-delete-manv').value = button.getAttribute('data-manv');
                });
        </script>
    }
</body>

</html>