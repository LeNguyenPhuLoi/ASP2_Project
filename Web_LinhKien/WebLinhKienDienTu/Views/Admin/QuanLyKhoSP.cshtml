@{
    Layout = "/Views/Shared/_AdminLayout.cshtml"; // Chỉ định layout mới cho trang Index
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        .pagination {
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center;
        }

    </style>

</head>

<body>

    <div class="container mt-4">
        <div class="card shadow-lg">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Quản lý kho sản phẩm</h4>
                <a class="btn btn-light btn-sm">+ Thêm sản phẩm</a>
            </div>

            <div class="card-body">
                <!-- Thanh tìm kiếm -->
                <form class="row mb-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="searchMa" placeholder="Tìm theo mã sản phẩm">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="searchKhachHang" placeholder="Tìm theo tên sản phẩm">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="trangThai">                          
                            <option>Kho 1</option>
                            <option>Kho 2</option>
                            <option>Kho 3</option>
                        </select>
                    </div>
                    <div class="col-md-3 text-end">
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                        <a class="btn btn-secondary">Làm mới</a>
                    </div>
                </form>

                <!-- Bảng danh sách -->
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>Mã kho</th>
                            <th>Mã sản phẩm</th>
                            <th>Ngày nhập</th>
                            <th>Số lượng nhập</th>
                            <th width="20%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>KHO01</td>
                            <td>MP001</td>
                            <td>12/09/2025</td>
                            <td>1000</td>
                            <td>
                                <a class="btn btn-warning btn-sm">Sửa</a>
                                <a class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                        <tr>
                            <td>KHO01</td>
                            <td>MP002</td>
                            <td>15/09/2025</td>
                            <td>500</td>
                            <td>
                                <a class="btn btn-warning btn-sm">Sửa</a>
                                <a class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>