@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <style>
        .pagination {
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center;
        }

    </style>

</head>

<body>

    <div class="container mt-4">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Quản lý hóa đơn</h4>
                <a class="btn btn-light btn-sm">+ Thêm hóa đơn</a>
            </div>

            <div class="card-body">
                <!-- Thanh tìm kiếm -->
                <form class="row mb-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="searchMa" placeholder="Tìm theo mã hóa đơn">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="searchKhachHang" placeholder="Tìm theo khách hàng">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="trangThai">
                            <option value="">-- Trạng thái --</option>
                            <option>Đã thanh toán</option>
                            <option>Chưa thanh toán</option>
                            <option>Đã hủy</option>
                        </select>
                    </div>
                    <div class="col-md-3 text-end">
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                        <a class="btn btn-secondary">Làm mới</a>
                    </div>
                </form>

                <!-- Bảng danh sách -->
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>Mã hóa đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày lập</th>
                            <th>Tổng tiền (₫)</th>
                            <th>Trạng thái</th>
                            <th width="20%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>HD001</td>
                            <td>Nguyễn Văn An</td>
                            <td>19/10/2025</td>
                            <td>2.450.000</td>
                            <td><span class="badge bg-success">Đã thanh toán</span></td>
                            <td>
                                <a class="btn btn-info btn-sm">Chi tiết</a>
                                <a class="btn btn-warning btn-sm">Sửa</a>
                                <a class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                        <tr>
                            <td>HD002</td>
                            <td>Trần Thị Banh</td>
                            <td>18/10/2025</td>
                            <td>1.150.000</td>
                            <td><span class="badge bg-danger">Chưa thanh toán</span></td>
                            <td>
                                <a class="btn btn-info btn-sm">Chi tiết</a>
                                <a class="btn btn-warning btn-sm">Sửa</a>
                                <a class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>