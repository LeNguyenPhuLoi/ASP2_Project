@using Microsoft.AspNetCore.Identity
@using WebLinhKienDienTu.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
	Layout = "/Views/Shared/_AdminLayout.cshtml"; // Chỉ định layout mới cho trang Index
	ViewData["Title"] = "Home Page";
}

@model List<WebLinhKienDienTu.Models.Khohang>
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Shop Homepage - Start Bootstrap Template</title>
	<!-- Favicon-->
	<link rel="icon" type="image/x-icon" href="~/favicon.ico" />
	<!-- Bootstrap icons-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
	<!-- Core theme CSS (includes Bootstrap)-->
	<link href="css/styles.css" rel="stylesheet" />
	<style>
		.pagination {
			display: flex;
			justify-content: center; /* Căn giữa theo chiều ngang */
			align-items: center;
		}

	</style>

</head>

<body>
	@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
	{
		<div class="container mt-4">
			<div class="card shadow-lg">
				<div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
					<h4 class="mb-0">Quản lý <b>Kho Hàng</b></h4>
					<a class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addKhoHang">+ Thêm <b>Kho Hàng</b></a>
				</div>

				<div class="card-body">
					<!-- Thanh tìm kiếm -->
					<form class="row mb-3" method="post" asp-action="KhoHang" asp-controller="KhoHang">
						<div class="col-md-4">
							<input type="text" class="form-control" name="searchMaKho" placeholder="Tìm theo mã kho hàng" value="@ViewBag.SearchMaKho" />
						</div>
						<div class="col-md-4">
							<input type="text" class="form-control" name="searchTenKho" placeholder="Tìm theo tên kho hàng" value="@ViewBag.SearchTenKho" />
						</div>
						<div class="col-md-4 text-end">
							<button class="btn btn-primary" type="submit">Tìm kiếm</button>
							<a class="btn btn-secondary" href="@Url.Action("KhoHang", "KhoHang")">Làm mới</a>
						</div>
					</form>



					<!-- Bảng danh sách -->
					<table class="table table-bordered text-center align-middle">
						<thead class="table-secondary">
							<tr>
								<th>Mã Kho Hàng</th>
								<th>Tên Kho Hàng</th>
								<th>Địa Chỉ</th>
								<th>Nhân Viên Quản Lý Kho</th>
								<th>Số Lượng Loại Hàng</th>
								<th width="20%">Thao tác</th>
							</tr>
						</thead>
						<tbody>

							@if (Model != null)
							{
								foreach (var item in Model)
								{
									<tr>
										<td>@item.Makho</td>
										<td>@item.Tenkho</td>
										<td>@item.Diachikho</td>
										<td>@item.Manv</td>
										<td>@item.Soluongloaihang</td>
										<td>
											<a class="btn btn-info btn-sm edit-btn"
											   data-bs-toggle="modal"
											   data-bs-target="#editKhoHang"
											   data-makho="@item.Makho"
											   data-tenkho="@item.Tenkho"
											   data-diachi="@item.Diachikho"
											   data-manv="@item.Manv"
											   data-loaihang="@item.Soluongloaihang">
												Sửa
											</a>

											<a class="btn btn-danger btn-sm delete-btn"
											   data-bs-toggle="modal"
											   data-bs-target="#deleteKhoHang"
											   data-makho="@item.Makho">
												Xóa
											</a>
										</td>
									</tr>
								}
							}

						</tbody>
					</table>

					<nav>
						<ul class="pagination justify-content-center">

							@if (ViewBag.Page > 1)
							{
								<li class="page-item">
									<a class="page-link" href="@Url.Action("KhoHang", new { page = ViewBag.Page - 1 })">Previous</a>
								</li>
							}

							@for (int i = 1; i <= ViewBag.TotalPage; i++)
							{
								<li class="page-item @(i == ViewBag.Page ? "active" : "")">
									<a class="page-link" href="@Url.Action("KhoHang", new { page = i })">@i</a>
								</li>
							}

							@if (ViewBag.Page < ViewBag.TotalPage)
							{
								<li class="page-item">
									<a class="page-link" href="@Url.Action("KhoHang", new { page = ViewBag.Page + 1 })">Next</a>
								</li>
							}

						</ul>
					</nav>

					<!-- Add Modal HTML -->
					<div id="addKhoHang" class="modal fade">
						<div class="modal-dialog">
							<div class="modal-content">
								@using (Html.BeginForm("AddKhoHang", "KhoHang", FormMethod.Post))
								{
									<div class="modal-header">
										<h4 class="modal-title">Thêm Kho Hàng</h4>
										<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
									</div>
									<div class="modal-body">
										<div class="mb-3">
											@Html.Label("Tên Kho Hàng")
											@Html.TextBox("Tenkho", "", new { @class = "form-control", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Địa Chỉ")
											@Html.TextArea("Diachi", "", new { @class = "form-control", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Nhân Viên Quản Lý Kho")
											@Html.DropDownList("Manv", (IEnumerable<SelectListItem>)ViewBag.Manv,
											"— Chọn nhân viên —",
																		new { @class = "form-select", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Số Lượng Loại Hàng")
											@Html.TextBox("Soluongloaihang", "", new { @class = "form-control", required = "required" })
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
										<button type="submit" class="btn btn-success">Thêm</button>
									</div>
								}
							</div>
						</div>
					</div>


					<div id="editKhoHang" class="modal fade">
						<div class="modal-dialog">
							<div class="modal-content">
								@using (Html.BeginForm("EditKhoHang", "KhoHang", FormMethod.Post))
								{
									<div class="modal-header">
										<h4 class="modal-title">Sửa Kho Hàng</h4>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										<div class="mb-3">
											@Html.Label("Mã Kho Hàng")
											@Html.TextBox("Makho", "", new { @class = "form-control", id = "modal-makho", required = "required", @readonly = "readonly" })
										</div>
										<div class="mb-3">
											@Html.Label("Tên Kho Hàng")
											@Html.TextBox("Tenkho", "", new { @class = "form-control", id = "modal-tenkho", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Địa Chỉ")
											@Html.TextArea("Diachi", "", new { @class = "form-control", id = "modal-diachi", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Mã Nhân Viên Quản Lý Kho")
											@Html.DropDownList("Manv", (IEnumerable<SelectListItem>)ViewBag.Manv,
											"— Chọn nhân viên —",
																		new { @class = "form-select", id = "modal-manv", required = "required" })
										</div>
										<div class="mb-3">
											@Html.Label("Số Lượng Loại Hàng")
											@Html.TextBox("Soluongloaihang", "", new { @class = "form-control", id = "modal-loaihang", required = "required" })
										</div>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
										<button type="submit" class="btn btn-info">Sửa</button>
									</div>
								}
							</div>
						</div>
					</div>

					<div id="deleteKhoHang" class="modal fade">
						<div class="modal-dialog">
							<div class="modal-content">
								@using (Html.BeginForm("DeleteKhoHang", "KhoHang", FormMethod.Post))
								{
									<div class="modal-header">
										<h4 class="modal-title">Xóa Kho Hàng</h4>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										@Html.TextBox("Makho", "", new { @class = "form-control", id = "modal-delete-makho", required = "required", @readonly = "readonly" })
										<p>Bạn có muốn xóa kho này?</p>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
										<button type="submit" class="btn btn-danger">Xóa</button>
									</div>
								}
							</div>
						</div>
					</div>


				</div>
			</div>
		</div>
	}

</body>

</html>
<script>

	var editModal = document.getElementById('editKhoHang');
	editModal.addEventListener('show.bs.modal', function (event) {
		var button = event.relatedTarget;
		document.getElementById('modal-makho').value = button.getAttribute('data-makho');
		document.getElementById('modal-tenkho').value = button.getAttribute('data-tenkho');
		document.getElementById('modal-diachi').value = button.getAttribute('data-diachi');
		document.getElementById('modal-manv').value = button.getAttribute('data-manv');
		document.getElementById('modal-loaihang').value = button.getAttribute('data-loaihang');
	});

		var deleteModal = document.getElementById('deleteKhoHang');
	deleteModal.addEventListener('show.bs.modal', function (event) {
		var button = event.relatedTarget;
		var makho = button.getAttribute('data-makho');
		document.getElementById('modal-delete-makho').value = makho;
	});


</script>