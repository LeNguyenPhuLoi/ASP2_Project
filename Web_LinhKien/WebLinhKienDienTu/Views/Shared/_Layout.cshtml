@using Microsoft.AspNetCore.Identity
@using WebLinhKienDienTu.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebLinhKienDienTu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebLinhKienDienTu.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid align-items-center">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Mlogo.png" style="width: 45px; height: 45px; margin-right: 8px;">
                    <b><span style="color:red;">M</span>indLess</b>
                </a>

                <!-- Nút thu gọn menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nội dung Navbar -->
                <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                    <!-- Menu trái -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <!-- Thanh tìm kiếm -->
                    <div class="header-search mx-3">
                        <form class="search-bar" method="post" asp-action="Search" asp-controller="Home">
                            <select class="form-select search-select" name="searchLoai">
                                <option value="">Tất cả loại</option>

                                @if (ViewBag.DanhSachLoai != null)
                                {
                                    foreach (var loai in ViewBag.DanhSachLoai as List<Loaisanpham>)
                                    {
                                        <option value="@loai.Maloai" selected="@(ViewBag.searchLoai == loai.Maloai ? "selected" : null)">
                                            @loai.Tenloai
                                        </option>
                                    }
                                }
                            </select>

                            <input class="input" type="text" name="searchTenSp"
                                   placeholder="Tìm kiếm ở đây..."
                                   value="@ViewBag.searchTenSp"
                                   style="border:none; outline:none; box-shadow:none;">

                            <button class="search-btn" type="submit">Search</button>
                        </form>
                    </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="header-cart">
                            @* CART *@
                            <form class="d-flex" asp-controller="GioHang" asp-action="GioHang" asp-route-email="@User.Identity.Name">
                                <button style="border:none;" class="btn btn-outline-dark" type="submit">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Carts</span>
                                </button>
                            </form>
                        </div>
                    }

                    <!-- Login partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder"><span style="color:red;">M</span>indLess</h1>
                <p class="lead fw-normal text-white-50 mb-0">
                    Premium Accessory – Best Prices, Top Quality!
                </p>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; <span style="color:red;">M</span>indLess (CMP)</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
